<UserControl x:Class="Tools.Controls.ExtractPdfImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:metro="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1500"
             DataContext="{Binding Source={StaticResource Locator},Path=ExtractPdfImage}">
    <Grid>
        <metro:AduFlatButton MinWidth="200" Height="60"  Command="{Binding SelectPdfCommand}" IsEnabled="{Binding BtnEnabled}"  Content="{Binding BtnContent}" Type="info" />
    </Grid>
</UserControl>